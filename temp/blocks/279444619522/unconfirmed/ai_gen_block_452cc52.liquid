{% doc %}
  @prompt
    add a section for reviews
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-reviews-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-reviews-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-reviews-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-reviews-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
  }

  .ai-reviews-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-reviews-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-review-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-review-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 4px;
  }

  .ai-review-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-review-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-review-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.review_text_size }}px;
    color: {{ block.settings.review_text_color }};
    line-height: 1.6;
  }

  .ai-review-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: auto;
  }

  .ai-review-avatar-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .ai-review-avatar-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-review-avatar-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.avatar_placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 600;
    color: {{ block.settings.avatar_placeholder_text_color }};
  }

  .ai-review-author-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-review-author-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_name_size }}px;
    font-weight: 600;
    color: {{ block.settings.author_name_color }};
    margin: 0;
  }

  .ai-review-author-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_title_size }}px;
    color: {{ block.settings.author_title_color }};
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-reviews-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-reviews-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-reviews-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-review-card-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<div class="ai-reviews-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-reviews-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-reviews-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-reviews-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-reviews-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-reviews-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign review_enabled_key = 'review_' | append: i | append: '_enabled'
          assign review_rating_key = 'review_' | append: i | append: '_rating'
          assign review_text_key = 'review_' | append: i | append: '_text'
          assign review_author_name_key = 'review_' | append: i | append: '_author_name'
          assign review_author_title_key = 'review_' | append: i | append: '_author_title'
          assign review_author_image_key = 'review_' | append: i | append: '_author_image'

          assign review_enabled = block.settings[review_enabled_key]
          assign review_rating = block.settings[review_rating_key]
          assign review_text = block.settings[review_text_key]
          assign review_author_name = block.settings[review_author_name_key]
          assign review_author_title = block.settings[review_author_title_key]
          assign review_author_image = block.settings[review_author_image_key]
        %}

        {% if review_enabled %}
          <div class="ai-review-card-{{ ai_gen_id }}">
            <div class="ai-review-stars-{{ ai_gen_id }}">
              {% for star in (1..5) %}
                <svg class="ai-review-star-{{ ai_gen_id }} {% if star > review_rating %}ai-review-star-empty-{{ ai_gen_id }}{% endif %}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% endfor %}
            </div>

            {% if review_text != blank %}
              <div class="ai-review-text-{{ ai_gen_id }}">{{ review_text }}</div>
            {% endif %}

            {% if review_author_name != blank or review_author_title != blank %}
              <div class="ai-review-author-{{ ai_gen_id }}">
                <div class="ai-review-avatar-{{ ai_gen_id }}">
                  {% if review_author_image %}
                    <img src="{{ review_author_image | image_url: width: 96 }}" alt="{{ review_author_name | escape }}" width="96" height="96" loading="lazy">
                  {% else %}
                    <div class="ai-review-avatar-placeholder-{{ ai_gen_id }}">
                      {% if review_author_name != blank %}
                        {{ review_author_name | slice: 0 | upcase }}
                      {% else %}
                        ?
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-review-author-info-{{ ai_gen_id }}">
                  {% if review_author_name != blank %}
                    <div class="ai-review-author-name-{{ ai_gen_id }}">{{ review_author_name }}</div>
                  {% endif %}
                  {% if review_author_title != blank %}
                    <div class="ai-review-author-title-{{ ai_gen_id }}">{{ review_author_title }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

