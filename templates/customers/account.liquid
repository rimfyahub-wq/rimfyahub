{% comment %}
  Customer Account Dashboard
{% endcomment %}

<div class="account-page">
  <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 6rem 2rem 4rem;">
    <div class="account-header" style="margin-bottom: 3rem;">
      <h1 style="font-size: 2.5rem; font-weight: 700; background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%)); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.5rem;">
        My Account
      </h1>
      <p style="color: rgba(255,255,255,0.6); font-size: 1.125rem;">
        Welcome back, {{ customer.first_name }}!
      </p>
    </div>

    <div style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
      <!-- Account Info -->
      <div style="background: rgba(10,10,10,0.8); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; padding: 2rem;">
        <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1.5rem; color: hsl(193, 100%, 65%);">
          Account Information
        </h2>
        <div style="display: grid; gap: 1rem; color: rgba(255,255,255,0.8);">
          <p><strong>Name:</strong> {{ customer.name }}</p>
          <p><strong>Email:</strong> {{ customer.email }}</p>
          <p><strong>Member since:</strong> {{ customer.created_at | date: "%B %d, %Y" }}</p>
        </div>
        <div style="margin-top: 1.5rem; display: flex; gap: 1rem; flex-wrap: wrap;">
          <a href="{{ routes.account_addresses_url }}" style="padding: 0.75rem 1.5rem; background: rgba(0,229,255,0.1); border: 1px solid rgba(0,229,255,0.3); border-radius: 8px; color: hsl(193, 100%, 65%); text-decoration: none; font-weight: 600; transition: all 0.2s;">
            Manage Addresses
          </a>
          <a href="{{ routes.account_logout_url }}" style="padding: 0.75rem 1.5rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: rgba(255,255,255,0.8); text-decoration: none; font-weight: 600; transition: all 0.2s;">
            Logout
          </a>
        </div>
      </div>

      <!-- Recent Orders -->
      <div style="background: rgba(10,10,10,0.8); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; padding: 2rem;">
        <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1.5rem; color: hsl(193, 100%, 65%);">
          Order History
        </h2>
        
        {% if customer.orders_count > 0 %}
          <div style="display: grid; gap: 1rem;">
            {% for order in customer.orders limit: 5 %}
              <div style="padding: 1.5rem; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.05); border-radius: 8px;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.75rem;">
                  <div>
                    <p style="font-weight: 600; color: white; margin-bottom: 0.25rem;">
                      Order #{{ order.name }}
                    </p>
                    <p style="font-size: 0.875rem; color: rgba(255,255,255,0.5);">
                      {{ order.created_at | date: "%B %d, %Y" }}
                    </p>
                  </div>
                  <span style="padding: 0.25rem 0.75rem; background: rgba(0,229,255,0.2); border-radius: 20px; font-size: 0.8125rem; color: hsl(193, 100%, 65%);">
                    {{ order.financial_status }}
                  </span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                  <p style="color: rgba(255,255,255,0.7);">
                    {{ order.line_items_count }} item{% if order.line_items_count > 1 %}s{% endif %}
                  </p>
                  <p style="font-weight: 600; color: hsl(193, 100%, 65%);">
                    {{ order.total_price | money }}
                  </p>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <p style="color: rgba(255,255,255,0.5); text-align: center; padding: 2rem;">
            You haven't placed any orders yet.
          </p>
          <div style="text-align: center; margin-top: 1.5rem;">
            <a href="/collections/all" style="display: inline-block; padding: 1rem 2rem; background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%)); border-radius: 8px; color: white; text-decoration: none; font-weight: 600;">
              Start Shopping
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: #000;
    color: white;
  }
</style>
