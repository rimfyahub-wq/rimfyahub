<section class="hero-section" data-mouse-glow data-scroll-parallax>
  <!-- Animated Background Gradients -->
  <div class="hero-bg-gradient hero-bg-current" data-gradient-layer="current" style="position: absolute; inset: 0; filter: blur(80px); transition: opacity 3s ease-in-out; background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%)); opacity: 0.6; z-index: 0;"></div>
  <div class="hero-bg-gradient hero-bg-next" data-gradient-layer="next" style="position: absolute; inset: 0; filter: blur(80px); transition: opacity 3s ease-in-out; background: linear-gradient(135deg, hsl(280, 100%, 70%), hsl(330, 100%, 70%), hsl(193, 100%, 65%)); opacity: 0; z-index: 0;"></div>
  
  <!-- Mouse Follow Glow -->
  <div class="mouse-glow-overlay"></div>
  
  <!-- Secondary Glow Layer -->
  <div class="secondary-glow"></div>

  <div class="container hero-container">
    <div class="hero-grid">
      <!-- Content -->
      <div class="hero-content" data-parallax-content>
        <div class="hero-text">
          <h1 class="hero-title">
            <span class="hero-title-main">Glow Edge</span>
            <span class="hero-title-sub">Model <span class="hero-model">F1</span></span>
          </h1>
          <p class="hero-subtitle">Transform Your Viewing Experience</p>
          <p class="hero-description">
            The first-ever LED ambient lighting frame designed exclusively for 40-50" TVs. Experience millions of colors that transform your space in less than 2 minutes.
          </p>
        </div>

        <div class="hero-buttons">
          <a href="/collections/all" class="btn btn-primary glow-pulse">Shop Now</a>
          <a href="#features" class="btn btn-outline">Learn More</a>
        </div>

        <!-- Key Features -->
        <div class="hero-stats">
          <div class="stat-item">
            <p class="stat-value">&lt;2 min</p>
            <p class="stat-label">Setup</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">16M+</p>
            <p class="stat-label">Colors</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">Voice</p>
            <p class="stat-label">Control</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">Tool-Free</p>
            <p class="stat-label">Install</p>
          </div>
        </div>
      </div>

      <!-- Hero Media -->
      <div class="hero-media" data-parallax-media>
        <div class="hero-video-glow"></div>
        <div class="hero-video-wrapper" style="background: transparent;">
          <img 
            src="https://cdn.shopify.com/s/files/1/0784/8096/5890/files/Gold_Black_Classy_Personal_Business_Card.png?v=1762194398" 
            alt="Glow Edge F1"
            class="hero-image"
            style="width: 100%; height: 100%; object-fit: cover; transform: scale(1.5);"
          >
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </div>
</section>

{% section 'features' %}
