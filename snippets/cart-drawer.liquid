{% comment %}
  Cart Drawer Component
  Provides a slide-in cart drawer with smooth animations
  Usage: {% render 'cart-drawer' %}
{% endcomment %}

<div id="cartDrawer" class="cart-drawer" aria-label="Shopping cart">
  <div class="cart-drawer-overlay"></div>
  
  <div class="cart-drawer-content">
    <div class="cart-drawer-header">
      <h2 class="cart-drawer-title">{{ 'cart.general.title' | t }}</h2>
      <button class="cart-drawer-close" aria-label="{{ 'general.close' | t }}" data-close-cart>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="cart-drawer-body">
      <div id="cartItems" class="cart-items">
        <!-- Cart items will be loaded here -->
        <div class="cart-empty">
          <p>{{ 'cart.general.empty' | t }}</p>
          <a href="/collections/all" class="btn btn-primary">{{ 'cart.general.continue_shopping' | t }}</a>
        </div>
      </div>
    </div>

    <div class="cart-drawer-footer">
      <div class="cart-totals">
        <div class="cart-subtotal">
          <span>{{ 'cart.general.subtotal' | t }}:</span>
          <span id="cartSubtotal">$0.00</span>
        </div>
        <p class="cart-note">{{ 'cart.general.taxes_and_shipping' | t }}</p>
      </div>
      <button id="checkoutBtn" class="btn btn-primary btn-full" disabled>
        {{ 'cart.general.checkout' | t }}
      </button>
      <a href="/collections/all" class="btn btn-secondary btn-full">
        {{ 'cart.general.continue_shopping' | t }}
      </a>
    </div>
  </div>
</div>

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    z-index: 1000;
    pointer-events: none;
  }

  .cart-drawer.active {
    pointer-events: auto;
  }

  .cart-drawer-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cart-drawer.active .cart-drawer-overlay {
    opacity: 1;
  }

  .cart-drawer-content {
    position: absolute;
    right: 0;
    width: min(100%, 420px);
    height: 100vh;
    background: #000;
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cart-drawer.active .cart-drawer-content {
    transform: translateX(0);
  }

  .cart-drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cart-drawer-title {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .cart-drawer-close {
    background: none;
    border: none;
    color: #fff;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s;
  }

  .cart-drawer-close:hover {
    transform: scale(1.1);
  }

  .cart-drawer-body {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cart-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }

  .cart-item {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.02);
  }

  .cart-item-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 0.25rem;
  }

  .cart-item-details {
    display: flex;
    flex-direction: column;
  }

  .cart-item-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .cart-item-price {
    color: hsl(193, 100%, 65%);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .cart-item-qty {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .qty-btn {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: #fff;
    width: 24px;
    height: 24px;
    border-radius: 0.25rem;
    cursor: pointer;
    font-size: 12px;
    transition: background 0.2s;
  }

  .qty-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .cart-remove {
    margin-top: auto;
    align-self: flex-start;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    font-size: 0.85rem;
    transition: color 0.2s;
  }

  .cart-remove:hover {
    color: #ff4444;
  }

  .cart-drawer-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.5);
  }

  .cart-totals {
    margin-bottom: 1rem;
  }

  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .cart-note {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .btn-full {
    width: 100%;
  }

  @media (max-width: 768px) {
    .cart-drawer-content {
      width: 100%;
    }
  }
</style>

<script>
  // Cart drawer functionality
  const cartDrawer = document.getElementById('cartDrawer');
  const cartCloseBtn = document.querySelector('[data-close-cart]');
  const cartOverlay = document.querySelector('.cart-drawer-overlay');
  
  if (cartDrawer) {
    // Close on overlay click
    cartOverlay?.addEventListener('click', () => {
      cartDrawer.classList.remove('active');
    });
    
    // Close on button click
    cartCloseBtn?.addEventListener('click', () => {
      cartDrawer.classList.remove('active');
    });
    
    // Expose cart drawer to global scope for opening
    window.openCartDrawer = function() {
      cartDrawer.classList.add('active');
    };
    
    window.closeCartDrawer = function() {
      cartDrawer.classList.remove('active');
    };
  }
</script>
