<div class="hero-section" data-mouse-glow data-scroll-parallax>
  <!-- Animated Background Gradients -->
  <div class="hero-bg-gradient hero-bg-current" data-gradient-layer="current"></div>
  <div class="hero-bg-gradient hero-bg-next" data-gradient-layer="next"></div>
  
  <!-- Mouse Follow Glow -->
  <div class="mouse-glow-overlay"></div>
  
  <!-- Secondary Glow Layer -->
  <div class="secondary-glow"></div>

  <div class="container hero-container">
    <div class="hero-grid">
      <!-- Content -->
      <div class="hero-content" data-parallax-content>
        <div class="hero-text">
          <p class="hero-subtitle">Transform Your Viewing Experience</p>
          <h1 class="hero-title">
            <span class="hero-title-main">Glow Edge</span>
            <span class="hero-title-sub">Model <span class="hero-model">F1</span></span>
          </h1>
          <p class="hero-description">
            The first-ever LED ambient lighting frame designed exclusively for 40-50" TVs. Experience millions of colors that transform your space in less than 2 minutes.
          </p>
        </div>

        <div class="hero-buttons">
          <a href="#products" class="btn btn-primary glow-pulse">Shop Now</a>
          <a href="#features" class="btn btn-outline">Learn More</a>
        </div>

        <!-- Key Features -->
        <div class="hero-stats">
          <div class="stat-item">
            <p class="stat-value">&lt;2 min</p>
            <p class="stat-label">Setup</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">16M+</p>
            <p class="stat-label">Colors</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">Voice</p>
            <p class="stat-label">Control</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">Tool-Free</p>
            <p class="stat-label">Install</p>
          </div>
        </div>
      </div>

      <!-- Hero Media -->
      <div class="hero-media" data-parallax-media>
        <div class="hero-video-glow"></div>
        <div class="hero-video-wrapper">
          <div style="width: 100%; height: 100%; background: linear-gradient(135deg, rgba(0,229,255,0.2), rgba(191,0,255,0.2)); display: flex; align-items: center; justify-content: center; color: rgba(255,255,255,0.5); font-size: 1.5rem; border-radius: 1rem;">
            Product Image/Video
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </div>
</div>

{% schema %}
{
  "name": "Hero Simple",
  "settings": []
}
{% endschema %}
