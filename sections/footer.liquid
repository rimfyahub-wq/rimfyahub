<footer class="site-footer" data-mouse-glow>
  <!-- Mouse Follow Glow -->
  <div class="mouse-glow-overlay" style="filter: blur(60px); opacity: 0.7;"></div>
  
  <div class="container">
    <div class="footer-content" data-animate-on-scroll>
      <div class="footer-grid">
        <!-- Company Info -->
        <div class="footer-column">
          {% if section.settings.logo %}
            <img 
              src="{{ section.settings.logo | img_url: '150x' }}" 
              alt="{{ shop.name }}"
              class="footer-logo"
            >
          {% else %}
            <h3 class="footer-logo-text">{{ shop.name }}</h3>
          {% endif %}
          
          <p class="footer-description">
            {{ section.settings.description | default: "Transform your viewing experience with innovative LED ambient lighting solutions." }}
          </p>
          
          <div class="social-links">
            {% if section.settings.facebook_url %}
              <a href="{{ section.settings.facebook_url }}" target="_blank" class="social-icon" aria-label="Facebook">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.instagram_url %}
              <a href="{{ section.settings.instagram_url }}" target="_blank" class="social-icon" aria-label="Instagram">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.twitter_url %}
              <a href="{{ section.settings.twitter_url }}" target="_blank" class="social-icon" aria-label="Twitter">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.youtube_url %}
              <a href="{{ section.settings.youtube_url }}" target="_blank" class="social-icon" aria-label="YouTube">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
                  <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>

        <!-- Quick Links -->
        <div class="footer-column">
          <h3 class="footer-heading">Quick Links</h3>
          <ul class="footer-links">
            <li><a href="/collections/all">Products</a></li>
            <li><a href="#features">Features</a></li>
            <li><a href="#about">About Us</a></li>
            <li><a href="#contact">Contact Us</a></li>
          </ul>
        </div>

        <!-- Legal -->
        <div class="footer-column">
          <h3 class="footer-heading">Legal</h3>
          <ul class="footer-links">
            <li><a href="/pages/privacy-policy">Privacy Policy</a></li>
            <li><a href="/pages/terms-of-service">Terms of Service</a></li>
            <li><a href="/pages/shipping-policy">Shipping Policy</a></li>
            <li><a href="/pages/refund-policy">Refund Policy</a></li>
          </ul>
        </div>

        <!-- Contact -->
        <div class="footer-column">
          <h3 class="footer-heading">Contact</h3>
          <ul class="footer-contact">
            {% if section.settings.email %}
            <li class="contact-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </li>
            {% endif %}
            
            {% if section.settings.phone %}
            <li class="contact-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
            </li>
            {% endif %}
            
            {% if section.settings.address %}
            <li class="contact-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span>{{ section.settings.address }}</span>
            </li>
            {% endif %}
          </ul>
        </div>
      </div>

      <!-- Language/Currency Selector -->
      {% render 'language-currency-selector', location: 'footer' %}

      <!-- Bottom Bar -->
      <div class="footer-bottom">
        <p class="copyright">
          Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </p>
        <div class="footer-bottom-links">
          <a href="/pages/cookie-policy">Cookie Policy</a>
          <a href="/pages/accessibility">Accessibility</a>
          <a href="/sitemap.xml">Sitemap</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: relative;
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.02));
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
  }

  .footer-content {
    padding: 3rem 0;
  }

  @media (min-width: 640px) {
    .footer-content {
      padding: 4rem 0;
    }
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    height: 80px;
    width: auto;
  }

  .footer-logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-description {
    font-size: 0.875rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s;
  }

  .social-icon:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }

  .footer-heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.3s;
    position: relative;
  }

  .footer-links a::before {
    content: '';
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%));
    transition: width 0.3s;
  }

  .footer-links a:hover::before {
    width: 16px;
  }

  .footer-links a:hover {
    color: hsl(193, 100%, 65%);
  }

  .footer-contact {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .contact-item svg {
    flex-shrink: 0;
    margin-top: 2px;
    color: hsl(193, 100%, 65%);
  }

  .contact-item a {
    color: inherit;
    transition: color 0.3s;
  }

  .contact-item a:hover {
    color: hsl(193, 100%, 65%);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
  }

  .footer-bottom-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .footer-bottom-links a {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.3s;
  }

  .footer-bottom-links a:hover {
    color: hsl(193, 100%, 65%);
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Company Description",
      "default": "Transform your viewing experience with innovative LED ambient lighting solutions."
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "text",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "text",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Physical Address"
    }
  ]
}
{% endschema %}
