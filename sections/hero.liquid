<section class="hero-section" data-mouse-glow data-scroll-parallax>
  <!-- Animated Background Gradients -->
  <div class="hero-bg-gradient hero-bg-current" data-gradient-layer="current"></div>
  <div class="hero-bg-gradient hero-bg-next" data-gradient-layer="next"></div>
  
  <!-- Mouse Follow Glow -->
  <div class="mouse-glow-overlay"></div>
  
  <!-- Secondary Glow Layer -->
  <div class="secondary-glow"></div>

  <div class="container hero-container">
    <div class="hero-grid">
      <!-- Content -->
      <div class="hero-content" data-parallax-content>
        <div class="hero-text">
          <h1 class="hero-title">
            <span class="hero-title-main">{{ 'sections.hero.title' | t }}</span>
          </h1>
          <p class="hero-subtitle">Model <span class="hero-model">{{ 'sections.hero.model' | t }}</span></p>
          <p class="hero-tagline">{{ 'sections.hero.subtitle' | t }}</p>
          <p class="hero-description">{{ 'sections.hero.description' | t }}</p>
        </div>

        <div class="hero-cta">
          <a href="/collections/all" class="btn btn-primary glow-pulse">{{ 'sections.hero.shop_now' | t }}</a>
          <a href="#features" class="btn btn-outline">{{ 'sections.hero.learn_more' | t }}</a>
        </div>

        <!-- Key Features -->
        <div class="hero-stats">
          <div class="stat-item">
            <p class="stat-value">{{ 'sections.hero.stat_setup_value' | t }}</p>
            <p class="stat-label">{{ 'sections.hero.stat_setup_label' | t }}</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">{{ 'sections.hero.stat_colors_value' | t }}</p>
            <p class="stat-label">{{ 'sections.hero.stat_colors_label' | t }}</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">{{ 'sections.hero.stat_voice_value' | t }}</p>
            <p class="stat-label">{{ 'sections.hero.stat_voice_label' | t }}</p>
          </div>
          <div class="stat-item">
            <p class="stat-value">{{ 'sections.hero.stat_install_value' | t }}</p>
            <p class="stat-label">{{ 'sections.hero.stat_install_label' | t }}</p>
          </div>
        </div>
      </div>

      <!-- Hero Video -->
      <div class="hero-media" data-parallax-media>
        <div class="hero-video-glow"></div>
        <div class="hero-video-wrapper">
          {% if section.settings.hero_video != blank %}
            <video 
              class="hero-video" 
              autoplay 
              loop 
              muted 
              playsinline
              data-video-fade
            >
              <source src="{{ section.settings.hero_video }}" type="video/mp4">
            </video>
          {% elsif section.settings.hero_image != blank %}
            <img 
              src="{{ section.settings.hero_image | img_url: '1200x' }}" 
              alt="{{ section.settings.title }}"
              class="hero-image"
            >
          {% else %}
            <div style="width: 100%; height: 100%; background: transparent; display: flex; align-items: center; justify-content: center; color: rgba(255,255,255,0.3); font-size: 1.5rem; border-radius: 1rem;">
              Product Image/Video
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero-bg-gradient {
    position: absolute;
    inset: 0;
    filter: blur({{ section.settings.gradient_blur | default: 80 }}px);
    transition: opacity 3s ease-in-out;
    {%- if section.settings.hide_background -%}
    display: none;
    {%- endif -%}
  }

  .hero-bg-current {
    background: linear-gradient(135deg, hsl(30, 100%, 60%), hsl(220, 100%, 60%), hsl(60, 100%, 60%));
    opacity: {{ section.settings.background_opacity | default: 60 | divided_by: 100.0 }};
  }

  .hero-bg-next {
    background: linear-gradient(135deg, hsl(120, 100%, 50%), hsl(300, 100%, 65%), hsl(180, 100%, 60%));
    opacity: 0;
  }

  .mouse-glow-overlay,
  .secondary-glow {
    position: absolute;
    inset: 0;
    pointer-events: none;
    transition: opacity 300ms;
  }

  .mouse-glow-overlay {
    opacity: 0.8;
    filter: blur(40px);
  }

  .secondary-glow {
    opacity: 0.7;
  }

  .hero-container {
    position: relative;
    z-index: 10;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .hero-content {
      text-align: left;
    }
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4.5rem;
    }
  }

  .hero-title-main {
    display: block;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .hero-subtitle {
      font-size: 1.875rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      font-size: 2.25rem;
    }
  }

  .hero-model {
    color: hsl(193, 100%, 65%);
  }

  .hero-tagline {
    color: hsl(193, 100%, 65%);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .hero-tagline {
      font-size: 1rem;
    }
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.75;
    color: rgba(255, 255, 255, 0.7);
    max-width: 48rem;
  }

  @media (min-width: 640px) {
    .hero-description {
      font-size: 1.25rem;
    }
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .hero-buttons {
      flex-direction: row;
    }
  }

  @media (min-width: 1024px) {
    .hero-buttons {
      justify-content: flex-start;
    }
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%));
    color: white;
  }

  .btn-primary:hover {
    box-shadow: 0 0 30px rgba(0, 229, 255, 0.6);
  }

  .glow-pulse {
    animation: glow-pulse 2s infinite;
  }

  @keyframes glow-pulse {
    0%, 100% {
      box-shadow: 0 0 20px rgba(0, 229, 255, 0.4);
    }
    50% {
      box-shadow: 0 0 40px rgba(0, 229, 255, 0.8);
    }
  }

  .btn-outline {
    border: 1px solid rgba(0, 229, 255, 0.5);
    color: white;
    background: transparent;
  }

  .btn-outline:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
    padding-top: 2rem;
  }

  .stat-item {
    text-align: center;
    padding: 1rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .stat-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(0, 229, 255, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 229, 255, 0.2);
  }

  .stat-value {
    font-size: {{ section.settings.stat_value_font_size | default: 24 }}px;
    font-weight: 700;
    color: hsl(193, 100%, 65%);
    margin-bottom: 0.25rem;
  }

  @media (min-width: 640px) {
    .stat-value {
      font-size: {{ section.settings.stat_value_font_size | default: 24 | plus: 4 }}px;
    }
  }

  .stat-label {
    font-size: {{ section.settings.stat_label_font_size | default: 12 }}px;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }

  .hero-media {
    position: relative;
    width: 100%;
  }

  .hero-video-glow {
    position: absolute;
    inset: -2rem;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%));
    opacity: 0.8;
    filter: blur(80px);
    border-radius: 1.5rem;
    transition: opacity 0.5s;
  }

  .hero-media:hover .hero-video-glow {
    opacity: 1;
  }

  .hero-video-wrapper {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: {{ section.settings.aspect_ratio | default: '16/9' }};
    transition: box-shadow 0.5s;
    {%- if section.settings.border_width > 0 -%}
    border: {{ section.settings.border_width }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
    {%- endif -%}
    {%- if section.settings.border_radius > 0 -%}
    border-radius: {{ section.settings.border_radius }}px;
    {%- endif -%}
    padding: {{ section.settings.image_padding_top }}px {{ section.settings.image_padding_right }}px {{ section.settings.image_padding_bottom }}px {{ section.settings.image_padding_left }}px;
    margin: {{ section.settings.image_margin_top }}px {{ section.settings.image_margin_right }}px {{ section.settings.image_margin_bottom }}px {{ section.settings.image_margin_left }}px;
    {%- if section.settings.enable_shadow -%}
    box-shadow: 0 0 {{ section.settings.shadow_blur }}px {{ section.settings.shadow_color | color_modify: 'alpha', section.settings.shadow_opacity | divided_by: 100.0 }};
    {%- endif -%}
  }

  .hero-media:hover .hero-video-wrapper {
    {%- if section.settings.enable_shadow -%}
    box-shadow: 0 0 {{ section.settings.shadow_blur | plus: 20 }}px {{ section.settings.shadow_color | color_modify: 'alpha', section.settings.shadow_opacity | plus: 20 | divided_by: 100.0 }};
    {%- endif -%}
  }

  .hero-video,
  .hero-image {
    width: {{ section.settings.image_width | default: 100 }}%;
    height: {{ section.settings.image_height | default: 100 }}%;
    object-fit: {{ section.settings.image_fit | default: 'contain' }};
    object-position: {{ section.settings.image_position | default: 'center center' }};
    transform: scale({{ section.settings.image_scale | default: 100 | divided_by: 100.0 }});
    transition: opacity 1000ms ease-in-out;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    color: hsl(193, 100%, 65%);
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }
</style>
</section>

