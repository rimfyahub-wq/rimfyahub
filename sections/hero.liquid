<section class="hero-section {{ section.settings.section_classes }}" data-mouse-glow data-scroll-parallax
         style="
           {%- if section.settings.section_bg_color != blank -%}background-color: {{ section.settings.section_bg_color }};{%- endif -%}
           {%- if section.settings.section_padding_top > 0 -%}padding-top: {{ section.settings.section_padding_top }}px;{%- endif -%}
           {%- if section.settings.section_padding_bottom > 0 -%}padding-bottom: {{ section.settings.section_padding_bottom }}px;{%- endif -%}
           {%- if section.settings.section_margin_top > 0 -%}margin-top: {{ section.settings.section_margin_top }}px;{%- endif -%}
           {%- if section.settings.section_margin_bottom > 0 -%}margin-bottom: {{ section.settings.section_margin_bottom }}px;{%- endif -%}
         ">

  {%- if section.settings.enable_background_gradient -%}
  <!-- Animated Background Gradients -->
  <div class="hero-bg-gradient hero-bg-current" data-gradient-layer="current"
       style="background: linear-gradient({{ section.settings.gradient_angle }}deg, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }}); opacity: {{ section.settings.gradient_opacity | divided_by: 100.0 }}; filter: blur({{ section.settings.gradient_blur }}px);"></div>
  <div class="hero-bg-gradient hero-bg-next" data-gradient-layer="next"
       style="background: linear-gradient({{ section.settings.gradient_angle | plus: 180 }}deg, {{ section.settings.gradient_color_2 }}, {{ section.settings.gradient_color_3 }}, {{ section.settings.gradient_color_1 }}); opacity: 0;"></div>
  {%- endif -%}

  {%- if section.settings.enable_mouse_glow -%}
  <!-- Mouse Follow Glow -->
  <div class="mouse-glow-overlay" style="opacity: {{ section.settings.mouse_glow_opacity | divided_by: 100.0 }}; filter: blur({{ section.settings.mouse_glow_blur }}px);"></div>
  {%- endif -%}

  {%- if section.settings.enable_secondary_glow -%}
  <!-- Secondary Glow Layer -->
  <div class="secondary-glow" style="opacity: {{ section.settings.secondary_glow_opacity | divided_by: 100.0 }};"></div>
  {%- endif -%}

  <div class="container hero-container {{ section.settings.container_classes }}"
       style="max-width: {{ section.settings.container_max_width }}px;">

    {%- if section.settings.layout_style == 'grid' -%}
    <div class="hero-grid {{ section.settings.grid_classes }}"
         style="
           {%- if section.settings.grid_columns_mobile -%}--grid-cols-mobile: {{ section.settings.grid_columns_mobile }};{%- endif -%}
           {%- if section.settings.grid_columns_tablet -%}--grid-cols-tablet: {{ section.settings.grid_columns_tablet }};{%- endif -%}
           {%- if section.settings.grid_columns_desktop -%}--grid-cols-desktop: {{ section.settings.grid_columns_desktop }};{%- endif -%}
           gap: {{ section.settings.grid_gap }}rem;
         ">
    {%- endif -%}

      {%- if section.settings.layout_style == 'flex' -%}
      <div class="hero-flex {{ section.settings.flex_classes }}"
           style="
             flex-direction: {{ section.settings.flex_direction }};
             justify-content: {{ section.settings.flex_justify }};
             align-items: {{ section.settings.flex_align }};
             gap: {{ section.settings.flex_gap }}rem;
           ">
      {%- endif -%}

        <!-- Content Column -->
        {%- if section.settings.show_content -%}
        <div class="hero-content {{ section.settings.content_classes }}" data-parallax-content
             style="
               {%- if section.settings.content_width -%}flex-basis: {{ section.settings.content_width }}%;{%- endif -%}
               {%- if section.settings.content_order -%}order: {{ section.settings.content_order }};{%- endif -%}
               text-align: {{ section.settings.content_alignment }};
             ">

          {%- if section.settings.show_badge and section.settings.badge_text != blank -%}
          <div class="hero-badge {{ section.settings.badge_classes }}"
               style="
                 {%- if section.settings.badge_bg_color -%}background-color: {{ section.settings.badge_bg_color }};{%- endif -%}
                 {%- if section.settings.badge_text_color -%}color: {{ section.settings.badge_text_color }};{%- endif -%}
                 {%- if section.settings.badge_border_radius -%}border-radius: {{ section.settings.badge_border_radius }}px;{%- endif -%}
               ">
            {{ section.settings.badge_text }}
          </div>
          {%- endif -%}

          {%- if section.settings.show_title and section.settings.title_text != blank -%}
          <div class="hero-text">
            <h1 class="hero-title {{ section.settings.title_classes }}"
                style="
                  {%- if section.settings.title_font_size -%}font-size: {{ section.settings.title_font_size }}px;{%- endif -%}
                  {%- if section.settings.title_color -%}color: {{ section.settings.title_color }};{%- endif -%}
                  {%- if section.settings.title_font_weight -%}font-weight: {{ section.settings.title_font_weight }};{%- endif -%}
                  {%- if section.settings.title_line_height -%}line-height: {{ section.settings.title_line_height }};{%- endif -%}
                ">
              {%- if section.settings.title_highlight_word and section.settings.title_highlight_text != blank -%}
                {%- assign words = section.settings.title_text | split: ' ' -%}
                {%- for word in words -%}
                  {%- if word == section.settings.title_highlight_text -%}
                    <span class="hero-title-highlight"
                          style="
                            {%- if section.settings.title_highlight_color -%}color: {{ section.settings.title_highlight_color }};{%- endif -%}
                            {%- if section.settings.title_highlight_bg -%}background: {{ section.settings.title_highlight_bg }};{%- endif -%}
                          ">{{ word }}</span>
                  {%- else -%}
                    {{ word }}
                  {%- endif -%}
                  {%- unless forloop.last -%} {% endunless -%}
                {%- endfor -%}
              {%- else -%}
                {{ section.settings.title_text }}
              {%- endif -%}
            </h1>
          </div>
          {%- endif -%}

          {%- if section.settings.show_subtitle and section.settings.subtitle_text != blank -%}
          <p class="hero-subtitle {{ section.settings.subtitle_classes }}"
             style="
               {%- if section.settings.subtitle_font_size -%}font-size: {{ section.settings.subtitle_font_size }}px;{%- endif -%}
               {%- if section.settings.subtitle_color -%}color: {{ section.settings.subtitle_color }};{%- endif -%}
               {%- if section.settings.subtitle_font_weight -%}font-weight: {{ section.settings.subtitle_font_weight }};{%- endif -%}
             ">
            {{ section.settings.subtitle_text }}
          </p>
          {%- endif -%}

          {%- if section.settings.show_description and section.settings.description_text != blank -%}
          <p class="hero-description {{ section.settings.description_classes }}"
             style="
               {%- if section.settings.description_font_size -%}font-size: {{ section.settings.description_font_size }}px;{%- endif -%}
               {%- if section.settings.description_color -%}color: {{ section.settings.description_color }};{%- endif -%}
               {%- if section.settings.description_line_height -%}line-height: {{ section.settings.description_line_height }};{%- endif -%}
             ">
            {{ section.settings.description_text }}
          </p>
          {%- endif -%}

          {%- if section.settings.show_buttons -%}
          <div class="hero-cta {{ section.settings.buttons_classes }}"
               style="
                 {%- if section.settings.buttons_layout == 'vertical' -%}flex-direction: column;{%- endif -%}
                 gap: {{ section.settings.buttons_gap }}rem;
               ">

            {%- if section.settings.primary_button_text != blank -%}
            <a href="{{ section.settings.primary_button_url }}" class="btn btn-primary {{ section.settings.primary_button_classes }} glow-pulse"
               style="
                 {%- if section.settings.primary_button_bg -%}background: {{ section.settings.primary_button_bg }};{%- endif -%}
                 {%- if section.settings.primary_button_color -%}color: {{ section.settings.primary_button_color }};{%- endif -%}
                 {%- if section.settings.primary_button_border_radius -%}border-radius: {{ section.settings.primary_button_border_radius }}px;{%- endif -%}
                 {%- if section.settings.primary_button_padding -%}padding: {{ section.settings.primary_button_padding }};{%- endif -%}
               ">
              {{ section.settings.primary_button_text }}
            </a>
            {%- endif -%}

            {%- if section.settings.secondary_button_text != blank -%}
            <a href="{{ section.settings.secondary_button_url }}" class="btn btn-outline {{ section.settings.secondary_button_classes }}"
               style="
                 {%- if section.settings.secondary_button_border_color -%}border-color: {{ section.settings.secondary_button_border_color }};{%- endif -%}
                 {%- if section.settings.secondary_button_color -%}color: {{ section.settings.secondary_button_color }};{%- endif -%}
                 {%- if section.settings.secondary_button_border_radius -%}border-radius: {{ section.settings.secondary_button_border_radius }}px;{%- endif -%}
                 {%- if section.settings.secondary_button_padding -%}padding: {{ section.settings.secondary_button_padding }};{%- endif -%}
               ">
              {{ section.settings.secondary_button_text }}
            </a>
            {%- endif -%}
          </div>
          {%- endif -%}

          <!-- Key Features - Always Visible -->
          <div class="hero-stats {{ section.settings.stats_classes }}"
               style="
                 {%- if section.settings.stats_columns -%}grid-template-columns: repeat({{ section.settings.stats_columns }}, 1fr);{%- endif -%}
                 gap: {{ section.settings.stats_gap }}rem;
               ">
            {%- for i in (1..4) -%}
            {%- assign stat_value = 'stat_' | append: i | append: '_value' -%}
            {%- assign stat_label = 'stat_' | append: i | append: '_label' -%}
            {%- if section.settings[stat_value] != blank -%}
            <div class="stat-item {{ section.settings.stat_classes }}"
                 style="
                   {%- if section.settings.stat_bg_color -%}background-color: {{ section.settings.stat_bg_color }};{%- endif -%}
                   {%- if section.settings.stat_border_radius -%}border-radius: {{ section.settings.stat_border_radius }}px;{%- endif -%}
                 ">
              <p class="stat-value {{ section.settings.stat_value_classes }}"
                 style="
                   {%- if section.settings.stat_value_color -%}color: {{ section.settings.stat_value_color }};{%- endif -%}
                   {%- if section.settings.stat_value_font_size -%}font-size: {{ section.settings.stat_value_font_size }}px;{%- endif -%}
                 ">{{ section.settings[stat_value] }}</p>
              <p class="stat-label {{ section.settings.stat_label_classes }}"
                 style="
                   {%- if section.settings.stat_label_color -%}color: {{ section.settings.stat_label_color }};{%- endif -%}
                   {%- if section.settings.stat_label_font_size -%}font-size: {{ section.settings.stat_label_font_size }}px;{%- endif -%}
                 ">{{ section.settings[stat_label] }}</p>
            </div>
            {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
        {%- endif -%}

        <!-- Media Column -->
        {%- if section.settings.show_media -%}
        <div class="hero-media {{ section.settings.media_classes }}" data-parallax-media
             style="
               {%- if section.settings.media_width -%}flex-basis: {{ section.settings.media_width }}%;{%- endif -%}
               {%- if section.settings.media_order -%}order: {{ section.settings.media_order }};{%- endif -%}
             ">

          {%- if section.settings.media_glow_enabled -%}
          <div class="hero-video-glow"
               style="
                 background: linear-gradient(135deg, {{ section.settings.media_glow_color_1 }}, {{ section.settings.media_glow_color_2 }});
                 opacity: {{ section.settings.media_glow_opacity | divided_by: 100.0 }};
                 filter: blur({{ section.settings.media_glow_blur }}px);
               "></div>
          {%- endif -%}

          <div class="hero-video-wrapper {{ section.settings.media_wrapper_classes }}"
               style="
                 {%- if section.settings.media_border_width > 0 -%}border: {{ section.settings.media_border_width }}px {{ section.settings.media_border_style }} {{ section.settings.media_border_color }};{%- endif -%}
                 {%- if section.settings.media_border_radius > 0 -%}border-radius: {{ section.settings.media_border_radius }}px;{%- endif -%}
                 {%- if section.settings.media_padding -%}padding: {{ section.settings.media_padding }};{%- endif -%}
                 {%- if section.settings.media_margin -%}margin: {{ section.settings.media_margin }};{%- endif -%}
                 {%- if section.settings.media_shadow_enabled -%}box-shadow: 0 0 {{ section.settings.media_shadow_blur }}px {{ section.settings.media_shadow_color | color_modify: 'alpha', section.settings.media_shadow_opacity | divided_by: 100.0 }};{%- endif -%}
                 {%- if section.settings.image_bg_color != blank and section.settings.image_bg_opacity > 0 -%}background-color: {{ section.settings.image_bg_color | color_modify: 'alpha', section.settings.image_bg_opacity | divided_by: 100.0 }};{%- endif -%}
                 aspect-ratio: {{ section.settings.media_aspect_ratio }};
               ">

            {%- if section.settings.media_type == 'video' and section.settings.hero_video != blank -%}
              <video
                class="hero-video {{ section.settings.video_classes }}"
                autoplay="{{ section.settings.video_autoplay }}"
                loop="{{ section.settings.video_loop }}"
                muted="{{ section.settings.video_muted }}"
                playsinline="{{ section.settings.video_playsinline }}"
                data-video-fade
                style="
                  {%- if section.settings.video_object_fit -%}object-fit: {{ section.settings.video_object_fit }};{%- endif -%}
                  {%- if section.settings.video_scale -%}transform: scale({{ section.settings.video_scale | divided_by: 100.0 }});{%- endif -%}
                "
              >
                <source src="{{ section.settings.hero_video }}" type="video/mp4">
              </video>
            {%- elsif section.settings.media_type == 'image' and section.settings.hero_image != blank -%}
              <img
                src="{{ section.settings.hero_image | img_url: section.settings.image_size }}"
                alt="{{ section.settings.hero_image.alt | default: section.settings.title_text }}"
                class="hero-image {{ section.settings.image_classes }}"
                style="
                  {%- if section.settings.image_object_fit -%}object-fit: {{ section.settings.image_object_fit }};{%- endif -%}
                  {%- if section.settings.image_object_position -%}object-position: {{ section.settings.image_object_position }};{%- endif -%}
                  {%- if section.settings.image_scale -%}transform: scale({{ section.settings.image_scale | divided_by: 100.0 }});{%- endif -%}
                  width: {{ section.settings.image_width }}%;
                  height: {{ section.settings.image_height }}%;
                "
              >
            {%- else -%}
              <div class="hero-placeholder {{ section.settings.placeholder_classes }}"
                   style="
                     {%- if section.settings.placeholder_bg -%}background: {{ section.settings.placeholder_bg }};{%- endif -%}
                     {%- if section.settings.placeholder_color -%}color: {{ section.settings.placeholder_color }};{%- endif -%}
                   ">
                {{ section.settings.placeholder_text | default: 'Add media content' }}
              </div>
            {%- endif -%}
          </div>
        </div>
        {%- endif -%}

      {%- if section.settings.layout_style == 'flex' -%}
      </div>
      {%- endif -%}

    {%- if section.settings.layout_style == 'grid' -%}
    </div>
    {%- endif -%}

  </div>

  {%- if section.settings.show_scroll_indicator -%}
  <!-- Scroll Indicator -->
  <div class="scroll-indicator {{ section.settings.scroll_indicator_classes }}"
       style="
         {%- if section.settings.scroll_indicator_color -%}color: {{ section.settings.scroll_indicator_color }};{%- endif -%}
         bottom: {{ section.settings.scroll_indicator_position }}px;
       ">
    {%- if section.settings.scroll_indicator_type == 'arrow' -%}
    <svg xmlns="http://www.w3.org/2000/svg" width="{{ section.settings.scroll_indicator_size }}" height="{{ section.settings.scroll_indicator_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
    {%- elsif section.settings.scroll_indicator_type == 'chevron' -%}
    <svg xmlns="http://www.w3.org/2000/svg" width="{{ section.settings.scroll_indicator_size }}" height="{{ section.settings.scroll_indicator_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
      <polyline points="6 15 12 21 18 15"></polyline>
    </svg>
    {%- endif -%}
  </div>
  {%- endif -%}
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero-bg-gradient {
    position: absolute;
    inset: 0;
    filter: blur({{ section.settings.gradient_blur | default: 80 }}px);
    transition: opacity 3s ease-in-out;
    {%- if section.settings.hide_background -%}
    display: none;
    {%- endif -%}
  }

  .hero-bg-current {
    background: linear-gradient(135deg, hsl(30, 100%, 60%), hsl(220, 100%, 60%), hsl(60, 100%, 60%));
    opacity: {{ section.settings.background_opacity | default: 60 | divided_by: 100.0 }};
  }

  .hero-bg-next {
    background: linear-gradient(135deg, hsl(120, 100%, 50%), hsl(300, 100%, 65%), hsl(180, 100%, 60%));
    opacity: 0;
  }

  .mouse-glow-overlay,
  .secondary-glow {
    position: absolute;
    inset: 0;
    pointer-events: none;
    transition: opacity 300ms;
  }

  .mouse-glow-overlay {
    opacity: 0.8;
    filter: blur(40px);
  }

  .secondary-glow {
    opacity: 0.7;
  }

  .hero-container {
    position: relative;
    z-index: 10;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .hero-content {
      text-align: left;
    }
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4.5rem;
    }
  }

  .hero-title-main {
    display: block;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .hero-subtitle {
      font-size: 1.875rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      font-size: 2.25rem;
    }
  }

  .hero-model {
    color: hsl(193, 100%, 65%);
  }

  .hero-tagline {
    color: hsl(193, 100%, 65%);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .hero-tagline {
      font-size: 1rem;
    }
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.75;
    color: rgba(255, 255, 255, 0.7);
    max-width: 48rem;
  }

  @media (min-width: 640px) {
    .hero-description {
      font-size: 1.25rem;
    }
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .hero-buttons {
      flex-direction: row;
    }
  }

  @media (min-width: 1024px) {
    .hero-buttons {
      justify-content: flex-start;
    }
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%));
    color: white;
  }

  .btn-primary:hover {
    box-shadow: 0 0 30px rgba(0, 229, 255, 0.6);
  }

  .glow-pulse {
    animation: glow-pulse 2s infinite;
  }

  @keyframes glow-pulse {
    0%, 100% {
      box-shadow: 0 0 20px rgba(0, 229, 255, 0.4);
    }
    50% {
      box-shadow: 0 0 40px rgba(0, 229, 255, 0.8);
    }
  }

  .btn-outline {
    border: 1px solid rgba(0, 229, 255, 0.5);
    color: white;
    background: transparent;
  }

  .btn-outline:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    padding-top: 3rem;
  }

  @media (min-width: 640px) {
    .hero-stats {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }
  }

  .stat-item {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem 1.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(30px);
    animation: statFadeInUp 0.8s ease-out forwards;
  }

  .stat-item:nth-child(1) { animation-delay: 0.1s; }
  .stat-item:nth-child(2) { animation-delay: 0.3s; }
  .stat-item:nth-child(3) { animation-delay: 0.5s; }
  .stat-item:nth-child(4) { animation-delay: 0.7s; }

  .stat-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.1), transparent);
    transition: left 0.5s;
  }

  .stat-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 229, 255, 0.15);
    border-color: rgba(0, 229, 255, 0.3);
  }

  .stat-item:hover::before {
    left: 100%;
  }

  @media (min-width: 1024px) {
    .stat-item {
      text-align: center;
      padding: 2.5rem 2rem;
    }
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 800;
    color: #00E5FF;
    margin-bottom: 0.5rem;
    display: block;
    text-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
    position: relative;
    z-index: 2;
  }

  @media (min-width: 640px) {
    .stat-value {
      font-size: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .stat-value {
      font-size: 3rem;
      margin-bottom: 0.75rem;
    }
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    z-index: 2;
  }

  @media (min-width: 640px) {
    .stat-label {
      font-size: 1rem;
    }
  }

  .hero-media {
    position: relative;
    width: 100%;
  }

  .hero-video-glow {
    position: absolute;
    inset: -2rem;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%));
    opacity: 0.8;
    filter: blur(80px);
    border-radius: 1.5rem;
