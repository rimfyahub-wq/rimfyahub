        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Customer Title/Location",
          "default": "Verified Buyer"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Customer Photo (Optional)"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating (Stars)",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5
        }
      ]
    }
  ],
