{% comment %}
  Customer Login Page
{% endcomment %}

<div class="customer-login-page">
  <div class="container" style="max-width: 500px; margin: 0 auto; padding: 8rem 2rem 4rem;">
    <div class="login-header" style="text-align: center; margin-bottom: 2rem;">
      <h1 style="font-size: 2rem; font-weight: 700; background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%)); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.5rem;">
        Customer Login
      </h1>
      <p style="color: rgba(255,255,255,0.6);">Sign in to your account</p>
    </div>

    <div style="background: rgba(10,10,10,0.8); border: 1px solid rgba(255,255,255,0.1); border-radius: 16px; padding: 2.5rem;">
      {% form 'customer_login', novalidate: 'novalidate' %}
        {% if form.errors %}
          <div style="display: flex; align-items: center; gap: 0.5rem; padding: 1rem; background: rgba(255, 68, 68, 0.1); border: 1px solid rgba(255, 68, 68, 0.3); border-radius: 8px; color: #ff4444; margin-bottom: 1.5rem; font-size: 0.875rem;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="12"></line>
              <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <span>{{ form.errors | default_errors }}</span>
          </div>
        {% endif %}

        <div style="margin-bottom: 1.25rem;">
          <label for="CustomerEmail" style="display: block; margin-bottom: 0.5rem; font-weight: 600; font-size: 0.875rem; color: rgba(255, 255, 255, 0.9);">Email</label>
          <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            placeholder="Enter your email"
            style="width: 100%; padding: 0.875rem 1rem; background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 8px; color: white; font-size: 0.9375rem;"
            {% if form.email %}value="{{ form.email }}"{% endif %}
            required
          >
        </div>

        <div style="margin-bottom: 1.25rem;">
          <label for="CustomerPassword" style="display: block; margin-bottom: 0.5rem; font-weight: 600; font-size: 0.875rem; color: rgba(255, 255, 255, 0.9);">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="CustomerPassword"
            autocomplete="current-password"
            placeholder="Enter your password"
            style="width: 100%; padding: 0.875rem 1rem; background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 8px; color: white; font-size: 0.9375rem;"
            required
          >
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; font-size: 0.875rem;">
          <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer; color: rgba(255, 255, 255, 0.8);">
            <input type="checkbox" name="remember_me">
            <span>Remember me</span>
          </label>
          <a href="{{ routes.account_recover_url }}" style="color: hsl(193, 100%, 65%); text-decoration: none;">Forgot password?</a>
        </div>

        <button type="submit" style="width: 100%; padding: 1rem; background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%)); border: none; border-radius: 8px; color: white; font-size: 1rem; font-weight: 600; cursor: pointer; box-shadow: 0 4px 15px rgba(0, 229, 255, 0.3); transition: all 0.3s;">
          Sign In
        </button>
      {% endform %}

      <p style="text-align: center; margin-top: 1.5rem; color: rgba(255, 255, 255, 0.6); font-size: 0.9375rem;">
        Don't have an account? 
        <a href="{{ routes.account_register_url }}" style="color: hsl(193, 100%, 65%); font-weight: 600; text-decoration: none;">Sign up</a>
      </p>
    </div>
  </div>
</div>

<style>
  body {
    background: #000;
    color: white;
  }
  
  input:focus {
    outline: none;
    border-color: hsl(193, 100%, 65%) !important;
    box-shadow: 0 0 0 3px rgba(0, 229, 255, 0.1);
  }
  
  input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }
  
  button[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(0, 229, 255, 0.5);
  }
</style>
