<section class="error-section" data-mouse-glow>
  <div class="mouse-glow-overlay"></div>
  
  <div class="container">
    <div class="error-content">
      <h1 class="error-title">404</h1>
      <h2 class="error-subtitle">Page Not Found</h2>
      <p class="error-description">The page you were looking for does not exist.</p>
      <p class="error-suggestion">Maybe you want to try the search instead?</p>
      
      <form action="/search" method="get" class="search-form">
        <input type="search" name="q" placeholder="Search..." class="search-input">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
      
      <div class="error-links">
        <a href="/" class="btn btn-outline">Back to Home</a>
        <a href="/collections/all" class="btn btn-outline">View Products</a>
      </div>
    </div>
  </div>
</section>

<style>
  .error-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 4rem 0;
    text-align: center;
  }

  .error-content {
    position: relative;
    z-index: 10;
    max-width: 600px;
    margin: 0 auto;
  }

  .error-title {
    font-size: 8rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 1rem;
    text-shadow: 0 0 40px rgba(0, 229, 255, 0.5);
  }

  .error-subtitle {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .error-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }

  .error-suggestion {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2rem;
  }

  .search-form {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    justify-content: center;
  }

  .search-input {
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: white;
    font-size: 1rem;
    min-width: 300px;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .error-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%));
    color: white;
    border: none;
    cursor: pointer;
  }

  .btn-primary:hover {
    box-shadow: 0 0 30px rgba(0, 229, 255, 0.6);
  }

  .btn-outline {
    border: 1px solid rgba(0, 229, 255, 0.5);
    color: white;
    background: transparent;
  }

  .btn-outline:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }
</style>

{% schema %}
{
  "name": "404 Page",
  "settings": []
}
{% endschema %}
