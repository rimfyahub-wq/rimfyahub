<header class="site-header">
  <div class="container">
    <div class="header-inner">
      <!-- Logo -->
      <div class="header-logo">
        {% if section.settings.logo %}
          <a href="/">
            <img 
              src="{{ section.settings.logo | img_url: '200x' }}" 
              alt="{{ shop.name }}"
              class="logo-image"
            >
          </a>
        {% else %}
          <a href="/" class="logo-text">
            {{ shop.name }}
          </a>
        {% endif %}
      </div>

      <!-- Desktop Navigation Menu -->
      <nav class="header-nav">
        <a href="/collections/all" class="nav-link">
          Products
          <span class="nav-underline"></span>
        </a>
        <a href="#about" class="nav-link">
          About Us
          <span class="nav-underline"></span>
        </a>
        <a href="#contact" class="nav-link">
          Contact Us
          <span class="nav-underline"></span>
        </a>
      </nav>

      <!-- Mobile & Cart Actions -->
      <div class="header-actions">
        <!-- Account Button -->
        <div class="account-wrapper">
          <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" class="account-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="8" r="4"></circle>
              <path d="M4 20c0-4.4 3.6-8 8-8s8 3.6 8 8"></path>
            </svg>
            <span class="account-name">{% if customer %}{{ customer.first_name | default: 'Account' }}{% else %}Login{% endif %}</span>
          </a>
          
          <!-- Dropdown Menu -->
          <div class="account-dropdown">
            {% if customer %}
              <a href="{{ routes.account_url }}" class="dropdown-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="8" r="4"></circle>
                  <path d="M4 20c0-4.4 3.6-8 8-8s8 3.6 8 8"></path>
                </svg>
                My Account
              </a>
              <a href="{{ routes.account_url }}#/orders" class="dropdown-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                  <path d="M8 8h8M8 13h8"></path>
                </svg>
                Orders
              </a>
              <a href="{{ routes.account_addresses_url }}" class="dropdown-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2L3 9v12h18V9l-9-7z"></path>
                </svg>
                Addresses
              </a>
              <div class="dropdown-divider"></div>
              <a href="{{ routes.account_logout_url }}" class="dropdown-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M16 3h5v18h-5M10 17l5-5-5-5M15 12H3"></path>
                </svg>
                Logout
              </a>
            {% else %}
              <a href="{{ routes.account_login_url }}" class="dropdown-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 3H3v18h5M14 17l-5-5 5-5M9 12h12"></path>
                </svg>
                Login
              </a>
              <a href="{{ routes.account_register_url }}" class="dropdown-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="8" r="4"></circle>
                  <path d="M18 18l2 2M4 20c0-4.4 3.6-8 8-8 1 0 2 .2 2.8.5"></path>
                </svg>
                Sign Up
              </a>
            {% endif %}
          </div>
        </div>
        
        <!-- Cart Button -->
        <a href="/cart" class="cart-button">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="cart-count">{{ cart.item_count }}</span>
          {% endif %}
        </a>

        <!-- Hamburger Menu Button (Mobile Only) -->
        <button class="hamburger-button" id="hamburgerMenu" aria-label="Toggle menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav class="mobile-nav" id="mobileNav">
    <a href="/collections/all" class="mobile-nav-link">Products</a>
    <a href="#about" class="mobile-nav-link">About Us</a>
    <a href="#contact" class="mobile-nav-link">Contact Us</a>
  </nav>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .container {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (min-width: 768px) {
    .container {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
    padding-top: 1.5rem;
  }

  @media (min-width: 768px) {
    .header-inner {
      height: 80px;
      padding-top: 0;
    }
  }

  .logo-image {
    height: 100px;
    width: auto;
  }

  @media (min-width: 768px) {
    .logo-image {
      height: 140px;
    }
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%), hsl(330, 100%, 70%));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-decoration: none;
  }

  @media (min-width: 768px) {
    .logo-text {
      font-size: 2rem;
    }
  }

  /* Desktop Navigation */
  .header-nav {
    display: none;
    align-items: center;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .header-nav {
      display: flex;
    }
  }

  .nav-link {
    position: relative;
    font-size: 1.125rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    text-decoration: none;
    transition: color 0.3s;
  }

  .nav-link:hover {
    color: hsl(193, 100%, 65%);
  }

  .nav-underline {
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%));
    transition: width 0.3s;
  }

  .nav-link:hover .nav-underline {
    width: 100%;
  }

  /* Header Actions (Cart + Hamburger) */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  /* Account Button & Dropdown */
  .account-wrapper {
    position: relative;
  }

  .account-button {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0 0.75rem;
    height: 44px;
    border: 1px solid rgba(0, 229, 255, 0.5);
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.3);
    color: white;
    text-decoration: none;
    transition: all 0.3s;
  }

  @media (min-width: 768px) {
    .account-button {
      height: 48px;
      padding: 0 1rem;
    }
  }

  .account-button:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }

  .account-name {
    display: none;
    font-size: 0.875rem;
    font-weight: 600;
    white-space: nowrap;
  }

  @media (min-width: 1024px) {
    .account-name {
      display: inline-block;
    }
  }

  /* Account Dropdown */
  .account-dropdown {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    min-width: 220px;
    background: rgba(10, 10, 10, 0.98);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 229, 255, 0.3);
    border-radius: 12px;
    padding: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.7), 0 0 20px rgba(0, 229, 255, 0.2);
  }

  .account-wrapper:hover .account-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    border-radius: 8px;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .dropdown-link:hover {
    background: rgba(0, 229, 255, 0.15);
    color: hsl(193, 100%, 65%);
    transform: translateX(4px);
  }

  .dropdown-link svg {
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .dropdown-link:hover svg {
    opacity: 1;
  }

  .dropdown-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0.5rem 0;
  }

  .cart-button {
    position: relative;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(0, 229, 255, 0.5);
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.3);
    color: white;
    text-decoration: none;
    transition: all 0.3s;
  }

  @media (min-width: 768px) {
    .cart-button {
      width: 48px;
      height: 48px;
    }
  }

  .cart-button:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: hsl(193, 100%, 65%);
    color: black;
    font-size: 0.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Hamburger Menu Button */
  .hamburger-button {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 44px;
    height: 44px;
    padding: 10px;
    border: 1px solid rgba(0, 229, 255, 0.5);
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: all 0.3s;
  }

  @media (min-width: 768px) {
    .hamburger-button {
      display: none;
    }
  }

  .hamburger-button:hover {
    border-color: hsl(193, 100%, 65%);
    box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);
  }

  .hamburger-button.active .hamburger-line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger-button.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger-button.active .hamburger-line:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .hamburger-line {
    width: 100%;
    height: 2px;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%));
    transition: all 0.3s;
    border-radius: 2px;
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 0;
    max-height: 0;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.95);
    transition: max-height 0.3s ease-in-out;
  }

  @media (min-width: 768px) {
    .mobile-nav {
      display: none;
    }
  }

  .mobile-nav.active {
    max-height: 300px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-nav-link {
    padding: 1rem 1.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s;
  }

  .mobile-nav-link:hover,
  .mobile-nav-link:active {
    color: hsl(193, 100%, 65%);
    background: rgba(0, 229, 255, 0.1);
    padding-left: 2rem;
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hamburgerButton = document.getElementById('hamburgerMenu');
    const mobileNav = document.getElementById('mobileNav');
    
    if (hamburgerButton && mobileNav) {
      hamburgerButton.addEventListener('click', function() {
        hamburgerButton.classList.toggle('active');
        mobileNav.classList.toggle('active');
      });

      // Close menu when clicking a link
      const mobileLinks = mobileNav.querySelectorAll('.mobile-nav-link');
      mobileLinks.forEach(link => {
        link.addEventListener('click', function() {
          hamburgerButton.classList.remove('active');
          mobileNav.classList.remove('active');
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (!hamburgerButton.contains(event.target) && !mobileNav.contains(event.target)) {
          hamburgerButton.classList.remove('active');
          mobileNav.classList.remove('active');
        }
      });
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image",
      "info": "Upload your logo image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text (if no image)",
      "default": "RIMFYA"
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "label": "Logo Height (Mobile)",
      "min": 60,
      "max": 150,
      "step": 10,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "logo_width_desktop",
      "label": "Logo Height (Desktop)",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 140
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu",
      "info": "Create menu in Navigation section"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Enable Sticky Header",
      "default": true
    }
  ]
}
{% endschema %}
