<section id="{{ section.settings.section_id | default: 'features' }}" class="features-section {{ section.settings.section_classes }}" data-mouse-glow
         style="
           {%- if section.settings.section_bg_color != blank -%}background-color: {{ section.settings.section_bg_color }};{%- endif -%}
           {%- if section.settings.section_bg_image != blank -%}background-image: url({{ section.settings.section_bg_image | img_url: '2000x' }}); background-size: {{ section.settings.section_bg_size }}; background-position: {{ section.settings.section_bg_position }};{%- endif -%}
           {%- if section.settings.section_padding_top > 0 -%}padding-top: {{ section.settings.section_padding_top }}px;{%- endif -%}
           {%- if section.settings.section_padding_bottom > 0 -%}padding-bottom: {{ section.settings.section_padding_bottom }}px;{%- endif -%}
           {%- if section.settings.section_margin_top > 0 -%}margin-top: {{ section.settings.section_margin_top }}px;{%- endif -%}
           {%- if section.settings.section_margin_bottom > 0 -%}margin-bottom: {{ section.settings.section_margin_bottom }}px;{%- endif -%}
         ">

  {%- if section.settings.enable_mouse_glow -%}
  <!-- Mouse Follow Glow -->
  <div class="mouse-glow-overlay" style="opacity: {{ section.settings.mouse_glow_opacity | divided_by: 100.0 }}; filter: blur({{ section.settings.mouse_glow_blur }}px);"></div>
  {%- endif -%}

  <div class="container {{ section.settings.container_classes }}"
       style="max-width: {{ section.settings.container_max_width }}px;">

    {%- if section.settings.show_header -%}
    <div class="features-header {{ section.settings.header_classes }}"
         style="text-align: {{ section.settings.header_alignment }};">
      {%- if section.settings.show_badge and section.settings.badge_text != blank -%}
      <div class="section-badge {{ section.settings.badge_classes }}"
           style="
             {%- if section.settings.badge_bg_color -%}background-color: {{ section.settings.badge_bg_color }};{%- endif -%}
             {%- if section.settings.badge_text_color -%}color: {{ section.settings.badge_text_color }};{%- endif -%}
             {%- if section.settings.badge_border_radius -%}border-radius: {{ section.settings.badge_border_radius }}px;{%- endif -%}
           ">
        {{ section.settings.badge_text }}
      </div>
      {%- endif -%}

      {%- if section.settings.show_title and section.settings.title_text != blank -%}
      <h2 class="section-title {{ section.settings.title_classes }}"
          style="
            {%- if section.settings.title_font_size -%}font-size: {{ section.settings.title_font_size }}px;{%- endif -%}
            {%- if section.settings.title_color -%}color: {{ section.settings.title_color }};{%- endif -%}
            {%- if section.settings.title_font_weight -%}font-weight: {{ section.settings.title_font_weight }};{%- endif -%}
            {%- if section.settings.title_line_height -%}line-height: {{ section.settings.title_line_height }};{%- endif -%}
          ">
        {{ section.settings.title_text }}
      </h2>
      {%- endif -%}

      {%- if section.settings.show_subtitle and section.settings.subtitle_text != blank -%}
      <p class="section-description {{ section.settings.subtitle_classes }}"
         style="
           {%- if section.settings.subtitle_font_size -%}font-size: {{ section.settings.subtitle_font_size }}px;{%- endif -%}
           {%- if section.settings.subtitle_color -%}color: {{ section.settings.subtitle_color }};{%- endif -%}
           {%- if section.settings.subtitle_line_height -%}line-height: {{ section.settings.subtitle_line_height }};{%- endif -%}
         ">
        {{ section.settings.subtitle_text }}
      </p>
      {%- endif -%}
    </div>
    {%- endif -%}

    {%- if section.settings.show_features_grid -%}
    <div class="features-grid {{ section.settings.grid_classes }}" data-animate-on-scroll
         style="
           {%- if section.settings.grid_columns_mobile -%}--grid-cols-mobile: {{ section.settings.grid_columns_mobile }};{%- endif -%}
           {%- if section.settings.grid_columns_tablet -%}--grid-cols-tablet: {{ section.settings.grid_columns_tablet }};{%- endif -%}
           {%- if section.settings.grid_columns_desktop -%}--grid-cols-desktop: {{ section.settings.grid_columns_desktop }};{%- endif -%}
           gap: {{ section.settings.grid_gap }}rem;
         ">

      {%- for block in section.blocks -%}
      {%- if block.type == 'feature' -%}
      <div class="feature-card {{ section.settings.card_classes }} {{ block.settings.card_classes }}" data-animate-card
           style="
             --card-delay: {{ forloop.index0 | times: 0.1 }}s;
             --glow-color: {{ block.settings.glow_color | default: 'rgba(0, 229, 255, 0.9)' }};
             {%- if block.settings.card_bg_color -%}background-color: {{ block.settings.card_bg_color }};{%- endif -%}
             {%- if block.settings.card_border_radius -%}border-radius: {{ block.settings.card_border_radius }}px;{%- endif -%}
             {%- if block.settings.card_padding -%}padding: {{ block.settings.card_padding }};{%- endif -%}
             {%- if block.settings.card_margin -%}margin: {{ block.settings.card_margin }};{%- endif -%}
             {%- if block.settings.card_shadow_enabled -%}box-shadow: 0 0 {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color | color_modify: 'alpha', block.settings.card_shadow_opacity | divided_by: 100.0 }};{%- endif -%}
           ">

        {%- if block.settings.show_icon -%}
        <div class="feature-icon {{ section.settings.icon_classes }} {{ block.settings.icon_classes }}"
             style="
               {%- if block.settings.icon_color -%}color: {{ block.settings.icon_color }};{%- endif -%}
               {%- if block.settings.icon_bg_color -%}background: {{ block.settings.icon_bg_color }};{%- endif -%}
               {%- if block.settings.icon_size -%}width: {{ block.settings.icon_size }}px; height: {{ block.settings.icon_size }}px;{%- endif -%}
               {%- if block.settings.icon_border_radius -%}border-radius: {{ block.settings.icon_border_radius }}px;{%- endif -%}
             ">
          {%- if block.settings.icon_type == 'svg' and block.settings.custom_svg != blank -%}
            {{ block.settings.custom_svg }}
          {%- elsif block.settings.icon_type == 'image' and block.settings.icon_image != blank -%}
            <img src="{{ block.settings.icon_image | img_url: '100x' }}" alt="{{ block.settings.title }}" style="width: 100%; height: 100%; object-fit: contain;">
          {%- else -%}
            {%- assign icon_name = block.settings.icon_name | default: 'star' -%}
            {%- case icon_name -%}
              {%- when 'star' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              {%- when 'zap' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
              {%- when 'heart' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>
              {%- when 'shield' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
              {%- when 'settings' -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg>
              {%- else -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path><path d="M12 17h.01"></path></svg>
            {%- endcase -%}
          {%- endif -%}
        </div>
        {%- endif -%}

        {%- if block.settings.show_title and block.settings.title != blank -%}
        <h3 class="feature-title {{ section.settings.card_title_classes }} {{ block.settings.title_classes }}"
            style="
              {%- if block.settings.title_font_size -%}font-size: {{ block.settings.title_font_size }}px;{%- endif -%}
              {%- if block.settings.title_color -%}color: {{ block.settings.title_color }};{%- endif -%}
              {%- if block.settings.title_font_weight -%}font-weight: {{ block.settings.title_font_weight }};{%- endif -%}
            ">
          {{ block.settings.title }}
        </h3>
        {%- endif -%}

        {%- if block.settings.show_description and block.settings.description != blank -%}
        <p class="feature-description {{ section.settings.card_description_classes }} {{ block.settings.description_classes }}"
           style="
             {%- if block.settings.description_font_size -%}font-size: {{ block.settings.description_font_size }}px;{%- endif -%}
             {%- if block.settings.description_color -%}color: {{ block.settings.description_color }};{%- endif -%}
             {%- if block.settings.description_line_height -%}line-height: {{ block.settings.description_line_height }};{%- endif -%}
           ">
          {{ block.settings.description }}
        </p>
        {%- endif -%}

        {%- if block.settings.show_button and block.settings.button_text != blank -%}
        <a href="{{ block.settings.button_url }}" class="feature-button {{ section.settings.button_classes }} {{ block.settings.button_classes }}"
           style="
             {%- if block.settings.button_bg_color -%}background-color: {{ block.settings.button_bg_color }};{%- endif -%}
             {%- if block.settings.button_text_color -%}color: {{ block.settings.button_text_color }};{%- endif -%}
             {%- if block.settings.button_border_radius -%}border-radius: {{ block.settings.button_border_radius }}px;{%- endif -%}
             {%- if block.settings.button_padding -%}padding: {{ block.settings.button_padding }};{%- endif -%}
           ">
          {{ block.settings.button_text }}
        </a>
        {%- endif -%}
      </div>
      {%- endif -%}
      {%- endfor -%}
    </div>
    {%- endif -%}

    {%- if section.settings.show_lifestyle_images -%}
    <div class="lifestyle-grid {{ section.settings.lifestyle_classes }}" data-animate-on-scroll
         style="
           {%- if section.settings.lifestyle_columns_mobile -%}--lifestyle-cols-mobile: {{ section.settings.lifestyle_columns_mobile }};{%- endif -%}
           {%- if section.settings.lifestyle_columns_tablet -%}--lifestyle-cols-tablet: {{ section.settings.lifestyle_columns_tablet }};{%- endif -%}
           {%- if section.settings.lifestyle_columns_desktop -%}--lifestyle-cols-desktop: {{ section.settings.lifestyle_columns_desktop }};{%- endif -%}
           gap: {{ section.settings.lifestyle_gap }}rem;
         ">

      {%- for block in section.blocks -%}
      {%- if block.type == 'lifestyle_image' -%}
      <div class="lifestyle-item {{ section.settings.lifestyle_item_classes }} {{ block.settings.item_classes }}"
           data-animate-slide="{{ block.settings.animation_direction | default: 'left' }}"
           style="
             {%- if block.settings.item_padding -%}padding: {{ block.settings.item_padding }};{%- endif -%}
             {%- if block.settings.item_margin -%}margin: {{ block.settings.item_margin }};{%- endif -%}
           ">

        {%- if block.settings.show_glow -%}
        <div class="lifestyle-glow"
             style="
               background: linear-gradient(135deg, {{ block.settings.glow_color_1 | default: '#00E5FF' }}, {{ block.settings.glow_color_2 | default: '#BF00FF' }});
               opacity: {{ block.settings.glow_opacity | default: 40 | divided_by: 100.0 }};
               filter: blur({{ block.settings.glow_blur | default: 20 }}px);
             "></div>
        {%- endif -%}

        {%- if block.settings.image != blank -%}
        <img
          src="{{ block.settings.image | img_url: block.settings.image_size | default: '800x' }}"
          alt="{{ block.settings.image_alt | default: block.settings.title }}"
          class="lifestyle-image {{ section.settings.lifestyle_image_classes }} {{ block.settings.image_classes }}"
          style="
            {%- if block.settings.image_border_radius -%}border-radius: {{ block.settings.image_border_radius }}px;{%- endif -%}
            {%- if block.settings.image_shadow_enabled -%}box-shadow: 0 0 {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color | color_modify: 'alpha', block.settings.image_shadow_opacity | divided_by: 100.0 }};{%- endif -%}
          "
        >
        {%- endif -%}

        {%- if block.settings.show_overlay and (block.settings.overlay_title != blank or block.settings.overlay_description != blank) -%}
        <div class="lifestyle-overlay {{ block.settings.overlay_classes }}"
             style="
               {%- if block.settings.overlay_bg_color -%}background-color: {{ block.settings.overlay_bg_color }};{%- endif -%}
               {%- if block.settings.overlay_text_color -%}color: {{ block.settings.overlay_text_color }};{%- endif -%}
             ">
          {%- if block.settings.overlay_title != blank -%}
          <h3 class="overlay-title {{ block.settings.overlay_title_classes }}">{{ block.settings.overlay_title }}</h3>
          {%- endif -%}
          {%- if block.settings.overlay_description != blank -%}
          <p class="overlay-description {{ block.settings.overlay_description_classes }}">{{ block.settings.overlay_description }}</p>
          {%- endif -%}
        </div>
        {%- endif -%}
      </div>
      {%- endif -%}
      {%- endfor -%}
    </div>
    {%- endif -%}
  </div>
</section>

<style>
  .features-section {
    position: relative;
    padding: 5rem 0;
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.03));
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .features-section {
      padding: 8rem 0;
    }
  }

  .mouse-glow-overlay {
    position: absolute;
    inset: 0;
    opacity: 0.8;
    pointer-events: none;
    transition: opacity 300ms;
    filter: blur(50px);
  }

  .features-header {
    text-align: center;
    max-width: 48rem;
    margin: 0 auto 4rem;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .section-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .section-title {
      font-size: 3rem;
    }
  }

  .section-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 5rem;
    position: relative;
    z-index: 10;
    perspective: 1000px;
    transform-style: preserve-3d;
  }

  @media (min-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .feature-card {
    padding: 1.5rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px) scale(0.95);
    animation-delay: var(--card-delay);
    position: relative;
    box-shadow: 
      0 0 30px var(--glow-color, rgba(0, 229, 255, 0.4)),
      0 0 60px var(--glow-color, rgba(0, 229, 255, 0.2)),
      0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .feature-card::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 1rem;
    background: linear-gradient(135deg, var(--glow-color, rgba(0, 229, 255, 0.9)), transparent);
    opacity: 0.7;
    transition: opacity 0.2s ease-in-out;
    z-index: -1;
    filter: blur(20px);
  }

  .feature-card.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    animation: fadeInUp 0.5s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .feature-card:hover {
    transform: translateY(-8px) scale(1.03);
    border-color: var(--glow-color, rgba(0, 229, 255, 0.8));
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 
      0 0 50px var(--glow-color, rgba(0, 229, 255, 0.7)),
      0 0 100px var(--glow-color, rgba(0, 229, 255, 0.5)),
      0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 0.75rem;
    background: linear-gradient(135deg, currentColor, currentColor);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .feature-icon svg {
    width: 1.5rem;
    height: 1.5rem;
    color: black;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.15) rotate(5deg);
    filter: drop-shadow(0 0 15px currentColor);
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.7);
  }

  .lifestyle-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .lifestyle-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .lifestyle-item {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    opacity: 0;
    transition: transform 0.5s;
  }

  .lifestyle-item[data-animate-slide="left"] {
    transform: translateX(-100px) rotateY(-15deg);
  }

  .lifestyle-item[data-animate-slide="right"] {
    transform: translateX(100px) rotateY(15deg);
  }

  .lifestyle-item.is-visible {
    opacity: 1;
    transform: translateX(0) rotateY(0);
    animation: slideIn 0.8s forwards;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0) rotateY(0);
    }
  }

  .lifestyle-item:hover {
    transform: scale(1.05);
  }

  .lifestyle-glow {
    position: absolute;
    inset: -0.5rem;
    background: linear-gradient(135deg, hsl(193, 100%, 65%), hsl(280, 100%, 70%));
    opacity: 0;
    filter: blur(2rem);
    transition: opacity 0.5s;
  }

  .lifestyle-item:hover .lifestyle-glow {
    opacity: 0.4;
  }

  .lifestyle-image {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 0 40px rgba(147, 51, 234, 0.5);
    transition: all 0.5s;
  }

  .lifestyle-item:hover .lifestyle-image {
    transform: scale(1.05);
  }
</style>

